<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.haulmont.demo.maps.web.order"
        xmlns:maps="http://schemas.haulmont.com/maps/0.1/ui-component.xsd">
    <data>
        <instance id="orderDc"
                  class="com.haulmont.demo.maps.entity.Order"
                  view="_local">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <hbox spacing="true">
            <form id="form" dataContainer="orderDc">
                <column width="250px">
                    <textField id="amountField" property="amount"/>
                    <dateField id="dateField" property="date"/>
                    <textField id="longitudeField" caption="msg://longitude" property="longitude" datatype="geocoordinate"/>
                    <textField id="latitudeField" caption="msg://latitude" property="latitude" datatype="geocoordinate"/>
                </column>
            </form>
            <maps:geoMap id="map" height="400px" width="800px" center="-99.755859, 39.164141" zoom="4">
                <maps:layers selectedLayer="orderLayer">
                    <maps:tile id="tiles"
                               urlPattern="https://{s}.basemaps.cartocdn.com/rastertiles/voyager/{z}/{x}/{y}{r}.png"
                               attribution="CARTO"/>
                    <maps:vector id="orderLayer" dataContainer="orderDc" editable="true"/>
                </maps:layers>
            </maps:geoMap>
        </hbox>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
