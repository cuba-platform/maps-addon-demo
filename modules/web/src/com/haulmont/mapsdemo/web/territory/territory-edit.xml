<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.haulmont.mapsdemo.web.territory.TerritoryEdit"
        datasource="territoryDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.mapsdemo.web.territory"
        xmlns:maps="http://schemas.haulmont.com/maps/0.1/ui-component.xsd">
    <dsContext>
        <datasource id="territoryDs"
                    class="com.haulmont.mapsdemo.entity.Territory"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <hbox spacing="true">
            <vbox spacing="true">
                <fieldGroup id="fieldGroup"
                            datasource="territoryDs">
                    <column width="250px">
                        <field property="name"/>
                        <field property="polygon"/>
                    </column>
                </fieldGroup>
            </vbox>
            <maps:geoMap id="map" height="400px" width="800px" center="-99.755859, 39.164141" zoom="4">
                <maps:layers selectedLayer="territory">
                    <maps:tile id="tiles"
                               urlPattern="https://{s}.basemaps.cartocdn.com/rastertiles/voyager/{z}/{x}/{y}{r}.png"
                                attribution="CARTO"/>
                    <maps:vector id="territory"
                                 datasource="territoryDs"
                                 editable="true"/>
                </maps:layers>
            </maps:geoMap>
        </hbox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
