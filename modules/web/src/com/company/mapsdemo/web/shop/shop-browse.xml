<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.mapsdemo.web.shop.ShopBrowse"
        focusComponent="shopsTable"
        lookupComponent="shopsTable"
        messagesPack="com.company.mapsdemo.web.shop"
        xmlns:maps="http://schemas.haulmont.com/maps/0.1/ui-component.xsd">
    <dsContext>
        <groupDatasource id="shopsDs"
                         class="com.company.mapsdemo.entity.Shop"
                         view="_local">
            <query>
                <![CDATA[select e from mapsdemo$Shop e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="shopsTable"
            spacing="true">
        <filter id="filter"
                applyTo="shopsTable"
                datasource="shopsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="shopsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rows datasource="shopsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="shopsTable.create"/>
                <button id="editBtn"
                        action="shopsTable.edit"/>
                <button id="removeBtn"
                        action="shopsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <maps:map id="map"
                  height="600px"
                  width="100%"/>
    </layout>
</window>
