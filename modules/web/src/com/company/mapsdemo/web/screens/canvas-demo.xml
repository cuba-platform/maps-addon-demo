<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://canvasScreenCaption"
        class="com.company.mapsdemo.web.screens.CanvasDemo"
        messagesPack="com.company.mapsdemo.web.screens"
        xmlns:maps="http://schemas.haulmont.com/maps/0.1/ui-component.xsd">
    <layout expand="map">
        <hbox spacing="true">
            <button id="drawPoint" caption="msg://drawPoint" invoke="drawPoint"/>
            <button id="drawPolyline" caption="msg://drawPolyline" invoke="drawPolyline"/>
            <button id="drawPolygon" caption="msg://drawPolygon" invoke="drawPolygon"/>
        </hbox>
        <maps:geoMap id="map" width="100%" center="40,40" zoom="4">
            <maps:layers>
                <maps:tile id="tiles"
                           urlPattern="https://{s}.basemaps.cartocdn.com/rastertiles/voyager/{z}/{x}/{y}{r}.png"
                           attribution="CARTO"/>
            </maps:layers>
        </maps:geoMap>
    </layout>
</window>