<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.mapsdemo.web.territory.TerritoryEdit"
        datasource="territoryDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.mapsdemo.web.territory"
        xmlns:maps="http://schemas.haulmont.com/maps/0.1/ui-component.xsd">
    <dsContext>
        <datasource id="territoryDs"
                    class="com.company.mapsdemo.entity.Territory"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <hbox spacing="true">
            <vbox spacing="true">
                <fieldGroup id="fieldGroup"
                            datasource="territoryDs">
                    <column width="250px">
                        <field property="name"/>
                    </column>
                </fieldGroup>
                <button id="removePolygonButton"
                        enable="false"
                        caption="msg://removePolygon"
                        invoke="removePolygon"/>
            </vbox>
            <maps:geoMap id="map"
                         height="400px"
                         width="800px"/>
        </hbox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
